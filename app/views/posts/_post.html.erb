<div id="<%= dom_id post %>" class="post-card">
  <div class="post-card__header">
    <h2 class="post-card__title"><%= post.title %></h2>
    <% if controller.action_name == "show" %>
      <%= link_to "Edit", edit_post_path(post), class: "post-card__button post-card__button--edit" %>
    <% end %>
  </div>

  <div class="post-card__body">
    <div class="post-card__content">
      <%= post.body %>
    </div>
  </div>

  <div class="post-card__footer">
    <div class="post-card__meta">
      <span class="post-card__timestamp">
        <%= time_tag post.updated_at, "data-local" => "time", "data-format" => "%B %e, %Y %l:%M%P" %>
      </span>
      <div class="post-card__actions">
        <% unless controller.action_name == "show" %>
          <%= link_to "Show this post", post, class: "post-card__button" %>
        <% end %>
        <% if controller.action_name == "show" %>
          <%= button_to "Delete", post, method: :delete, class: "post-card__button post-card__button--danger", form: { data: { turbo_confirm: "Are you sure?" } } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
.post-card {
  background: var(--card-bg, white);
  border-radius: 8px;
  box-shadow: 0 2px 4px var(--card-shadow, rgba(0, 0, 0, 0.1));
  margin: 1rem 0;
  overflow: hidden;
  transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

.post-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px var(--card-shadow-hover, rgba(0, 0, 0, 0.15));
}

.post-card__header {
  padding: 1.5rem;
  border-bottom: 1px solid var(--border-color, #eee);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.post-card__title {
  margin: 0;
  font-size: 1.5rem;
  color: var(--text-primary, #333);
  flex: 1;
}

.post-card__body {
  padding: 1.5rem;
}

.post-card__content {
  color: var(--text-secondary, #666);
  line-height: 1.6;
}

.post-card__footer {
  padding: 1rem 1.5rem;
  background: var(--footer-bg, #f8f9fa);
  border-top: 1px solid var(--border-color, #eee);
}

.post-card__meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.post-card__timestamp {
  color: var(--text-muted, #888);
  font-size: 0.9rem;
}

.post-card__actions {
  display: flex;
  gap: 0.75rem;
  align-items: center;
}

.post-card__actions form {
  margin: 0;
  padding: 0;
  display: inline-flex;
  align-items: center;
  height: 100%;
}

.post-card__actions input[type="submit"] {
  appearance: none;
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  font: inherit;
  cursor: pointer;
  width: 100%;
  height: 100%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 4rem;
  text-align: center;
}

.post-card__button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.5rem 1rem;
  background: var(--button-bg, #007bff);
  color: var(--button-text, white);
  text-decoration: none;
  border-radius: 4px;
  transition: all 0.2s ease;
  border: 1px solid var(--button-border, transparent);
  font-weight: 500;
  font-size: 0.875rem;
  line-height: 1.25rem;
  min-width: 4rem;
  text-align: center;
  height: 2.25rem;
}

.post-card__button:hover {
  background: var(--button-bg-hover, #0056b3);
  color: var(--button-text, white);
  transform: translateY(-1px);
  box-shadow: 0 2px 4px var(--button-shadow, rgba(0, 0, 0, 0.1));
}

.post-card__button--danger {
  background: var(--button-danger-bg, #dc3545) !important;
  border-color: var(--button-danger-border, #dc3545) !important;
}

.post-card__button--danger:hover {
  background: var(--button-danger-bg-hover, #bb2d3b) !important;
}

.post-card__button--edit {
  margin-left: 1rem;
  font-size: 0.875rem;
  padding: 0.375rem 0.75rem;
  height: 2rem;
}

@media (prefers-color-scheme: dark) {
  :root {
    --card-bg: #1a1a1a;
    --card-shadow: rgba(0, 0, 0, 0.3);
    --card-shadow-hover: rgba(0, 0, 0, 0.4);
    --text-primary: #ffffff;
    --text-secondary: #cccccc;
    --text-muted: #888888;
    --border-color: #333333;
    --footer-bg: #242424;
    --button-bg: #2d3748;
    --button-bg-hover: #4a5568;
    --button-text: #ffffff;
    --button-border: #4a5568;
    --button-shadow: rgba(0, 0, 0, 0.3);
    --button-danger-bg: #dc3545;
    --button-danger-bg-hover: #bb2d3b;
    --button-danger-border: #dc3545;
  }
}

@media (prefers-color-scheme: light) {
  :root {
    --card-bg: #ffffff;
    --card-shadow: rgba(0, 0, 0, 0.1);
    --card-shadow-hover: rgba(0, 0, 0, 0.15);
    --text-primary: #333333;
    --text-secondary: #666666;
    --text-muted: #888888;
    --border-color: #eeeeee;
    --footer-bg: #f8f9fa;
    --button-bg: #e9ecef;
    --button-bg-hover: #dee2e6;
    --button-text: #495057;
    --button-border: #ced4da;
    --button-shadow: rgba(0, 0, 0, 0.1);
    --button-danger-bg: #dc3545;
    --button-danger-bg-hover: #bb2d3b;
    --button-danger-border: #dc3545;
  }
}
</style>
